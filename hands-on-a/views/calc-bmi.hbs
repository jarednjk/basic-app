{{#extends 'base'}}
{{#block 'content'}}

    <form method="POST">
        <div>
            <label class="form-label">Enter your height in metres:</label>
            <input type="number" step="0.01" class="form-control" name="height">
        </div>
        <div>
            <label class="form-label">Enter your weight in kg:</label>
            <input type="number" step="0.01" class="form-control" name="weight">
        </div>

        <input type="submit" class="btn btn-primary" value="Calc BMI"/>

    </form>

{{/block}}
{{/extends}}