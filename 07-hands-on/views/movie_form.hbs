{{#extends 'base'}}

{{#block 'content'}}

<form method="POST">
    <div>
        <label>Title</label>
        <input type="text" name="title" class="form-control"/>
    </div>
    <div>
        <label>Plot</label>
        <input type="text" name="plot" class="form-control" placeholder="Enter the list of food separated by commas"/>
    </div>
    <div>
        <input type="submit" class="btn btn-primary my-3" value="Add Movie"/>
    </div>

</form>

{{/block}}

