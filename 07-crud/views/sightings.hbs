{{#extends 'base'}}

{{#block 'content'}}

<table class="table">
    <thead>
        <tr>
            <th>Description</th>
            <th>Food</th>
            <th>Date</th>
        </tr>
    </thead>

    {{#each foodSightings}}
    <tr>
        <td>{{this.description}}</td>
        <td>{{this.food}}</td>
        <td>{{this.datetime}}</td>
        <td>
            <a href = "/food_sighting/edit/{{this._id}}" class="btn btn-primary btn-sm">Edit</a>
            <a href = "/food_sighting/delete/{{this._id}}" class="btn btn-danger btn-sm">Delete</a>
        </td>
    </tr>
    {{/each}}



</table>

{{/block}}

{{/extends}}